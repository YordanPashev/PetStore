@using PetStore.Common
@using PetStore.Data.Models.Common
@model PetStore.Web.ViewModels.Pets.PetDetailsViewModel

@{
    ViewData["Title"] = $"{Model.Name}";
}

<h1 style="text-align:center"><strong>@ViewData["Title"]</strong></h1>
<h4 style="text-align:center; color: gray"><i>Category: @Model.TypeName</i></h4>
<div class="d-flex justify-content-center container mt-3">
    <div class="card p-3 bg-white"><i class="fa fa-apple"></i>
        <div class="about-product text-center mt-2"><img src="@Model.ImageUrl" width="600"  alt="No image">
            <div style="text-align:center"><i><strong>Breed:</strong> @Model.Breed</i></div>
            <div style="text-align:center"><i><strong>Age:</strong> @Model.AgeInTextFormat</i></div>
            <div style="text-align:center"><i><strong>Date of birth:</strong> @Model.BirthDate.ToString(GlobalConstants.PetBirthDateFormat)</i></div>
            <div style="font-weight: bold;">Price: @Math.Round(Model.Price, 2) $</div>
            <br/> 
                 @if (User.IsInRole(GlobalConstants.AdministratorRoleName))
                 {
                    <p style="text-align:center">
                         Created on @Model.CreatedOn.ToString(GlobalConstants.AdministrationSettingsDateTimeFormat)<br/>
                         Last changes was made on @Model.ModifiedOn.Value.ToString(GlobalConstants.AdministrationSettingsDateTimeFormat)<br/>
                         Deleted on @Model.DeletedOn.Value.ToString(GlobalConstants.AdministrationSettingsDateTimeFormat)<br/>
                    </p>
                    <p>
                         <div class="d-grid gap-2 col-6 mx-auto">
                             <a class="btn btn-danger" onclick="return confirm('Return @Model.Name back to the shtop?');" asp-action="UndeleteResult" asp-route-id="@Model.Id">Return back to the shop</a>
                             <input class="btn btn-dark" value="Back" onclick="history.back()">
                        </div>
                    </p>
                 }
        </div>
    </div>
</div>

