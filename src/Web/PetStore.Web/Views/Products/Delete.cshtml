@model PetStore.Web.ViewModels.Products.ProductDetailsModels

@{
    ViewData["Title"] = "Detel Product";
}

<h2 style="text-align:center">Are you sure you want to delete this product?</h2>
<h5 style="text-align:center"><strong>Name:</strong> @Model.Name</h5>
<h5 style="text-align:center"><strong>Category:</strong> @Model.CategoryName</h5>
<h5 style="text-align:center"><strong>Price:</strong> @Model.Price $</h5>
<h5 style="text-align:center"><strong>Description:</strong> @Model.Description</h5>


<p class="d-flex justify-content-center container mt-3">
        <div class="card p-3 bg-white"><i class="fa fa-apple"></i>
            <div class="about-product text-center mt-2"><img src="@Model.ImageUrl" width="300" alt="No image">
       </div>
    </div>
<div/>
</p>
<br/>
<div class="d-grid gap-2 col-6 mx-auto">
  <a class="btn btn-success" asp-action="SuccessfullyDeletedProduct" asp-route-id="@Model.Id">Yes, delete product</a>
  <a class="btn btn-secondary" asp-action="AllProducts">No, back to All products</a>
  <a asp-controller="Categories" asp-action="Categories" class="btn btn-primary">Categories</a>
</div>

