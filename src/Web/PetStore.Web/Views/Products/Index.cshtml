@using PetStore.Common
@model PetStore.Web.ViewModels.Products.ListOfProductsViewModel

@{
    ViewData["Title"] = "Products";
}

<div class="row">
    @if (ViewBag.CategoryName == null && Model.CategoryName == null)
    {
        <h1 class="text-center"><strong>@ViewData["Title"]</strong></h1>
    }
    else
    {
        <h1 class="about-product text-left mt-2">
            <img src="@ViewBag.CategoryImageURL" alt="No image" style="width:120px; height:100px; border:2px solid; border-radius: 5px">
            @Model.CategoryName
        </h1>     
    }
    @if (Model.ListOfProducts.Count > 0)
    {
    <Row style="width: 1240px;">
        <Column>
            <div class="col-md-4 mb-4 justify-content-end" style="float: left"> 
                <form method="get" asp-controller="Products" asp-action="Index">
                    <div class="input-group">
                        @if (Model.SearchQuery == null)
                        {
                            <input style="font-size: 15pt" type="text" id="SearchQuery" name="SearchQuery" class="form-control" placeholder="Product name...">
                        }
                        else
                        {
                            <input style="font-size: 15pt" type="text" id="SearchQuery" name="SearchQuery" class="form-control" value="@Model.SearchQuery">
                        }
                            <input type="hidden" id="CategoryName" name="CategoryName" value="@Model.CategoryName">
                        <div class="input-group-btn">
                                <button class="btn btn-success m-auto" style="font-size: 15pt" type="submit">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </Column>
        @if (User.IsInRole(GlobalConstants.AdministratorRoleName))
        {
            <Column style="float: right;">
                    <a class="btn btn-danger" style="font-size: 15pt" asp-area="Administration" asp-controller="ProductsManager" asp-action="DeletedProducts">Deleted Products</a>
            </Column>
        }
    </Row>
    <table class="table table-hover mt-8" style="width: 1240px; border-bottom: 2px solid; border-radius: 15px; border-color: black; backdrop-filter: blur(20px);">
        <thead>
            <tr>
                <th style="font-size: 18pt; text-align: start; font-weight: bold;">Product</th>
                <th style="font-size: 18pt; text-align: start">Name</th>
                <th style="font-size: 18pt; color: gray; text-align: end; font-weight: bold;">Category</th>
                <th style="font-size: 18pt; color: darkorange; text-align: end; font-weight: bold;">Price</th>
                <th style="font-size: 18pt; color: #0DCAF0; text-align: end; font-weight: bold;">Get Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.ListOfProducts)
            {
                <tr name="trData">
                    <td onclick="location.href='@Url.Action("Details", "Products", new { product.Id })'" class="about-product text-start mt-2" width="160"><img src="@product.ImageUrl" width="160" alt="No Image"></td>
                    <td onclick="location.href='@Url.Action("Details", "Products", new { product.Id })'" style="font-size: 16pt; width: 400px; text-align: start; font-weight: bold;">@Html.DisplayFor(modelItem => product.Name)</td>
                    <td onclick="location.href='@Url.Action("Details", "Products", new { product.Id })'" style="font-size: 16pt; color: gray; text-align: end; width: 200px; font-weight: bold; font-style: italic;">@Html.DisplayFor(modelItem => product.CategoryName)</td>
                    <td onclick="location.href='@Url.Action("Details", "Products", new { product.Id })'" style="font-size: 16pt; color: darkorange; text-align: end; width: 200px; font-weight: bold;">@Html.DisplayFor(modelItem => product.Price) $</td>
                    <td style="text-align:end; font-weight: bold;">
                            <a class="btn btn-info" style="font-size: 15pt" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">Details</a>
                            @if (User.IsInRole(GlobalConstants.AdministratorRoleName))
                        {
                            <a class="btn btn-dark" style="font-size: 15pt" asp-area="Administration" asp-controller="ProductsManager" asp-action="EditProduct" asp-route-id="@product.Id">Edit</a>
                            <a class="btn btn-danger" style="font-size: 15pt" onclick="return confirm('Remove @product.Name from the shtop?');" asp-area="Administration" asp-controller="ProductsManager" asp-action="DeleteProduct" asp-route-id="@product.Id">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
    else
    {
        <h1 style="text-align: center">No products found</h1> 
        <br/>
    }
</div>

<p class="d-grid gap-2 col-2 mx-auto">
    <input class="btn btn-dark" value="Back" onclick="history.back()">
    @if (User.IsInRole(GlobalConstants.AdministratorRoleName))
    {
        <a class="btn btn-success" asp-area="Administration" asp-controller="Create" asp-action="CreateProduct">Add New Product</a>
    }     
</p>