@using PetStore.Common
@model PetStore.Web.ViewModels.Products.ProductDetailsModels

@{
    ViewData["Title"] = $"{Model.Name}";
}

<h3 style="text-align:left">Category: @Model.CategoryName</h3>
<h1 style="text-align:center">@Model.Name</h1>
<p class="d-flex justify-content-center container mt-3">
        <div class="card p-3 bg-white"><i class="fa fa-apple"></i>
            <div class="about-product text-center mt-2"><img src="@Model.ImageUrl" width="400"  alt="No image">
                <div> <h6 class="mt-4 text-black-50">@Model.Description</h6></div>
            <div>Price: @Math.Round(Model.Price, 2) $</div>
            <div><a class="btn btn-success" asp-action="">Purchase</a> </div>
             <br/>
             <br/>
            <div> <a class="btn btn-dark" style="float: left" asp-action="AllProducts">All Products</a>
            <a class="btn btn-info" style="float: right" asp-controller="Categories" asp-action="CategoryProducts" asp-route-id="@Model.Category.Id">More @Model.CategoryName Products</a> 
       </div>
       </div>
    </div>
<div/>
<div/>
<div/>
<p/>
<p>
   @if (User.IsInRole(GlobalConstants.AdministratorRoleName))
   {
       <p>
           <div class="d-grid gap-2 col-6 mx-auto">
                <a class="btn btn-secondary" asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-danger" asp-controller="Products" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
            </div>
       </p>
   }
</p>