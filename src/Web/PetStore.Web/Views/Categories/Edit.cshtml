@using PetStore.Common
@using PetStore.Data.Models.Common
@model PetStore.Web.ViewModels.Categories.EditCategoryViewModel

@{
    ViewData["Title"] = "Edit Category";
}

<h1 style="text-align:center; color:red">@ViewBag.UserMessage</h1>     

<h4 style="text-align: center">Edit</h4>
<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Id" class="control-label">Id</label>
                <input id="Id" name="Id" class="form-control" type="text" value="@Model.Id" readonly/>
            </div>
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input id="Name" name="Name" class="form-control" type="text" value="@Model.Name" minlength="@ProductValidationConstants.NameMinLength" minlength="@ProductValidationConstants.NameMinLength" maxlength="@ProductValidationConstants.NameMaxLength" required/>
            </div>
            <div class="form-group">
                <label for="ImageURL" class="control-label">ImageURL</label>
                <input id="ImageURL" name="ImageURL" pattern="@ProductValidationConstants.UrlRegexForView" title="@GlobalConstants.InvalidUrlUserMessage" class="form-control" type="text" value="@Model.ImageUrl" required/>
            </div>
            <br/>
            <div class="d-grid gap-2 col-6 mx-auto">
                <input type="submit" value="Edit" class="btn btn-success"/>
                    <a class="btn btn-danger" asp-action="DeleteResult" asp-route-id="@Model.Id">Delete</a>
                <input class="btn btn-dark" value="Back" onclick="history.back()">
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}