@using PetStore.Common
@model PetStore.Web.ViewModels.Categories.AllCategoriesViewModel

@{
    ViewData["Title"] = "Categories";
}

<div class="row">
    <div class="col-md-4">
        <h1>Categories</h1>
    </div>
</div>

<table class="table">
    <thead>
    <tr>
        <th>
        </th>
        <th>
            Name
        </th>
        <th style="text-align:end">
            Products Count
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model.AllCategories) 
    {
        <tr name="trData">
           <td class="about-product text-center mt-2"><img src="@category.ImageUrl" width="60" alt="No image">
                </td>
            <td>
                @Html.DisplayFor(modelItem => category.Name)
            </td>
            <td style="text-align:end">
                @Html.DisplayFor(modelItem => category.Products.Count)
            </td>
            <td style="text-align:end">
                <a class="btn btn-info" asp-action="CategoryProducts" asp-route-id="@category.Id">Products</a> 
                @if (User.IsInRole(GlobalConstants.AdministratorRoleName))
                {
                    <a class="btn btn-dark" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
<p>
   @if (User.IsInRole(GlobalConstants.AdministratorRoleName))
   {
       <p style="text-align:center">
           <a class="btn btn-success" asp-action="Create">Add new category</a>
       </p>
   }
</p>
