@model PetStore.Web.ViewModels.Categories.InputCategoryViewModel

@{
    ViewData["Title"] = "Successfully Added New Category";
}

<h1 style="text-align:center">@User.Identity.Name added new category<br/></h1>
<hr />
<h1 style="text-align:center">@Model.Name</h1>
<div class="d-flex justify-content-center container mt-3">
        <div class="card p-3 bg-white"><i class="fa fa-apple"></i>
            <div class="about-product text-center mt-2"><img src="@Model.ImageUrl" width="400"  alt="@Model.Name"></div>
       </div>
    </div>
<div/>
<br />
<div class="d-grid gap-2 col-6 mx-auto">
    <a class="btn btn-success" asp-action="Create">Create category</a>
    <a class="btn btn-primary" asp-controller="Products" asp-action="Create">Create product</a>
    <input class="btn btn-dark" value="Back" onclick="history.go(-2); return false;">
</div>

