@using PetStore.Common
@model PetStore.Web.ViewModels.Products.ListOfProductsViewModel

@{
    ViewData["Title"] = "Deleted Products";
}

<div class="row">
    <h1 class="text-center"><strong>@ViewData["Title"]</strong></h1>
    <div class="col-md-4 justify-content-end" style="float: left">
        <form method="get" asp-area="Administration" asp-controller="Delete" asp-action="DeletedProducts">
            <div class="input-group">
                @if (Model.SearchQuery == null)
                {
                    <input type="text" id="SearchQuery" name="SearchQuery" class="form-control" placeholder="Product name...">
                }
                else
                {
                    <input type="text" id="SearchQuery" name="SearchQuery" class="form-control" value="@Model.SearchQuery">
                }
                <div class="input-group-btn">
                    <button class="btn btn-success m-auto" type="submit">
                        Search
                    </button>
                </div>
            </div>
        </form> 
    </div>
</div>
@if (Model.ListOfProducts.Count > 0)
{
<table class="table table-hover mt-8" style="width: 1240px; border-bottom: 2px solid; border-radius: 15px; border-color: black; backdrop-filter: blur(20px);">
    <thead>
        <tr>
            <th style="text-align: start; font-weight: bold;">Product</th>
            <th style="text-align:start">Name</th>
            <th style="text-align: start; font-weight: bold;">Category</th>
            <th style="color: red; text-align:end; font-weight: bold;">Price</th>
            <th style="color: #0DCAF0; text-align:end; font-weight: bold;">Get Details</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var product in Model.ListOfProducts) 
    {
        <tr name="trData">
            <td onclick="location.href='@Url.Action("DeletedProductDetails", "Delete", new { product.Id })'" class="about-product text-start mt-2" width="160"><img src="@product.ImageUrl" width="160" alt="No Image"></td>
            <td onclick="location.href='@Url.Action("DeletedProductDetails", "Delete", new { product.Id })'" style="text-align:left; font-weight: bold;">@Html.DisplayFor(modelItem => product.Name)</td>
            <td onclick="location.href='@Url.Action("DeletedProductDetails", "Delete", new { product.Id })'" style="text-align:start; font-weight: bold; font-style: italic;">@Html.DisplayFor(modelItem => product.CategoryName)</td>
            <td onclick="location.href='@Url.Action("DeletedProductDetails", "Delete", new { product.Id })'" style="color: red; text-align:end; font-weight: bold;">@Html.DisplayFor(modelItem => product.Price) $</td>
            <td style="text-align:end">
                        <a class="btn btn-info" asp-area="Administration" asp-controller="Delete" asp-action="DeletedProductDetails" asp-route-id="@product.Id">Details</a>
                        <a class="btn btn-danger" onclick="return confirm('Return @product.Name back to the shtop?');" asp-area="Administration" asp-controller="Delete" asp-action="UndeleteResult" asp-route-id="@product.Id">Undelete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
}
else
{
        <h1 style="text-align: center">No products found</h1> 
        <br/>
}
<div style="text-align:center">
         <input class="btn btn-dark" value="Back" onclick="history.back()">
</div>