@using PetStore.Common
@using PetStore.Data.Models.Common
@model PetStore.Web.ViewModels.Pets.PetDetailsViewModel

@{
    this.ViewData["Title"] = $"{this.Model.Name}";
}

<h1 style="text-align:center"><strong>@this.ViewData["Title"]</strong></h1>
<h4 style="text-align:center; color: gray"><i>Category: @this.Model.TypeName</i></h4>
<div class="d-flex justify-content-center container mt-3">
    <div class="card p-3 bg-white"><i class="fa fa-apple"></i>
        <div class="about-product text-center mt-2"><img src="@this.Model.ImageUrl" width="600"  alt="No image">
            <div style="font-size: 18pt; text-align:center"><i><strong>Breed:</strong> @this.Model.Breed</i></div>
            <div style="font-size: 18pt; text-align:center"><i><strong>Age:</strong> @this.Model.AgeInTextFormat</i></div>
            <div style="font-size: 18pt; text-align:center"><i><strong>Date of birth:</strong> @this.Model.BirthDate.ToString(GlobalConstants.PetBirthDateFormat)</i></div>
            <br />
            <div style="color: darkorange; font-size: 18pt; font-weight: bold;">Price: @Math.Round(this.Model.Price, 2) $</div>
            <br />
            <div style="font-size: 18pt; text-align:center">
                <p style="text-align:center"><i><strong>Created on</strong></i> @this.Model.CreatedOn.ToString(GlobalConstants.AdministrationSettingsDateTimeFormat)</p>
                <p style="text-align:center"><i><strong>Last changes was made on</strong></i> @this.Model.ModifiedOn.Value.ToString(GlobalConstants.AdministrationSettingsDateTimeFormat)</p>
                <p style="text-align:center"><i><strong>Deleted on</strong></i> @this.Model.DeletedOn.Value.ToString(GlobalConstants.AdministrationSettingsDateTimeFormat)</p>
            </div>
            <div>
                <div class="d-grid gap-2 col-6 mx-auto">
                    <a class="btn btn-danger" style="font-size: 18pt;" onclick="return confirm('Return @this.Model.Name back to the shtop?');" asp-area="Administration" asp-controller="PetsManager" asp-action="UndeletePet" asp-route-id="@this.Model.Id">Return back to the shop</a>
                    <input class="btn btn-dark" style="font-size: 18pt;" value="Back" onclick="history.back()">
                </div>
            </div>
        </div>
    </div>
</div>
