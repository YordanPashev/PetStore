@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<h1 class="text-center"><strong>@ViewData["Title"]</strong></h1>
<div class="row" style="backdrop-filter: blur(10px); border: 2px solid; border-color: white; border-radius: 15px">
	<div class="col-md-4 mx-auto">
		<section>
			<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
				<h2 class="text-center mt-3"><i>Create a new account</i></h2>
				<div asp-validation-summary="ModelOnly" class="text-danger" style="color: red; background-color: yellow; font-weight: bold; font-style: italic; border-radius: 5px"></div>
				<div class="form-floating mt-3">
					<input asp-for="Input.FirstName" class="form-control" autocomplete="First Name" aria-required="true" />
					<label asp-for="Input.FirstName"></label>
					<span asp-validation-for="Input.FirstName" class="text-danger" style="color: red; background-color: yellow; font-weight: bold; font-style: italic; border-radius: 5px"></span>
				</div>
				<div class="form-floating mt-3">
					<input asp-for="Input.LastName" class="form-control" autocomplete="Last Name" aria-required="true" />
					<label asp-for="Input.LastName"></label>
					<span asp-validation-for="Input.LastName" class="text-danger" style="color: red; background-color: yellow; font-weight: bold; font-style: italic; border-radius: 5px"></span>
				</div>
				<div class="form-floating mt-3">
					<input asp-for="Input.Email" class="form-control" autocomplete="Email" aria-required="true" />
					<label asp-for="Input.Email"></label>
					<span asp-validation-for="Input.Email" class="text-danger" style="color: red; background-color: yellow; font-weight: bold; font-style: italic; border-radius: 5px"></span>
				</div>
				<div class="form-floating mt-3">
					<input asp-for="Input.PhoneNumber" class="form-control" autocomplete="Phone Number" aria-required="true" />
					<label asp-for="Input.PhoneNumber"></label>
					<span asp-validation-for="Input.PhoneNumber" class="text-danger" style="color: red; background-color: yellow; font-weight: bold; font-style: italic; border-radius: 5px"></span>
				</div>
				<div class="form-floating mt-3">
					<input asp-for="Input.DeliveryAddress" class="form-control" autocomplete="City, Street" aria-required="true" />
					<label asp-for="Input.DeliveryAddress"></label>
					<span asp-validation-for="Input.DeliveryAddress" class="text-danger" style="color: red; background-color: yellow; font-weight: bold; font-style: italic; border-radius: 5px"></span>
				</div>
				<div class="form-floating mt-3">
					<input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
					<label asp-for="Input.Password"></label>
					<span asp-validation-for="Input.Password" class="text-danger" style="color: red; background-color: yellow; font-weight: bold; font-style: italic; border-radius: 5px"></span>
				</div>
				<div class="form-floating mt-3">
					<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
					<label asp-for="Input.ConfirmPassword"></label>
					<span asp-validation-for="Input.ConfirmPassword" class="text-danger" style="color: red; background-color: yellow; font-weight: bold; font-style: italic; border-radius: 5px"></span>
				</div>
				<div>
					<button id="registerSubmit" type="submit" class="w-100 btn btn-lg bg-success mt-3 mb-4" style="color: white">Register</button>
				</div>
			</form>
		</section>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
